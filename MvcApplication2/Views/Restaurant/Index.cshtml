@model IEnumerable<MvcApplication2.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Index</h2>
    <p>
        @if (User.IsInRole("admin"))
        {
            @Html.ActionLink("Create New", "Create")
        }
    </p>

    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => model.Name)</div>
        <div class="col-md-3">@Html.DisplayNameFor(model => model.City)</div>
        <div class="col-md-3">@Html.DisplayNameFor(model => model.Country)</div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {


            <div class="col-md-3">@Html.DisplayFor(modelItem => item.Name)</div>
            <div class="col-md-3">@Html.DisplayFor(modelItem => item.City)</div>
            <div class="col-md-3">@Html.DisplayFor(modelItem => item.Country)</div>
            <div class="col-md-3">
                @if (User.IsInRole("admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                }
                |
                @Html.ActionLink("Reviews", "Index", "Reviews", new { id = item.Id }, null) |
                @if (User.IsInRole("admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }

            </div>

        }
    </div>

</div>